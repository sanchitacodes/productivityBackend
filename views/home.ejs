<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flow Harbour| Productivity</title>
    <!-- style -->
    <link rel="stylesheet" href="/styles/dash.css" />
    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <!-- google fonts  -->
<link href="https://fonts.googleapis.com/css2?family=Irish+Grover&display=swap" rel="stylesheet">

    <!-- remix icon -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>

  <body>
    <div class="header" id="header">
      <!-- header > navbar > menu logo lists account  -->
      <nav class="navbar" id="navbar">
        <div class="menu menu">
          <i class="ri-menu-2-fill"></i>
        </div>
        <div class="logo">
          <a id="logo" href="#">FLOW HARBOUR</a>
        </div>
        <div class="lists" id="lists">
          <ul>
            <li class="hover-underline-animation"><a href="#">HOME</a></li>
            <li class="hover-underline-animation"><a href="#">ABOUT</a></li>
            <li class="hover-underline-animation"><a href="#">CONTACT</a></li>
          </ul>


  
          <div class="account">
            <i class="ri-account-circle-fill"></i>
          </div>
        </div>
      </nav>
    </div>
    <div class="container" id="container">
      <div class="left">
        <div class="navtwo">
          <button class="n2buttons btn hover-underline-animation">PERSONAL DASHBOARD</button>
        <!-- <form action = "/resource" method="GET"> -->
          <button class="n2buttons btn hover-underline-animation"><a href="/Study/index.html">STUDY</a></button>
        
          <button class="n2buttons btn hover-underline-animation">TIME MANAGEMENT</button>
          <button class="n2buttons btn hover-underline-animation"><a href="/flowharbour-health/health.html">HEALTH</a></button>
        <form action="/expenses" method="GET">
          <button class="n2buttons btn hover-underline-animation">EXPANSES</button>
        </form>
        </div>
        <div class="shortcuts">
          <h2 class="shortcuts-title">QUICK WAYS</h2>
          <div class="scards">
            <div class="scard one">
                <i class="fa-solid fa-list-check"></i>
                
              <!-- <h3 onclick="document.querySelector('#todoForm').submit()">To Do List</h3>
              <form id="todoForm" action="/todos" method="GET">
                <button type="submit"  class="btn-todo">Go to Todos</button>
            </form> -->
            <form id="todoForm" action="/todos" method="GET">
              <h3 onclick="document.getElementById('todoForm').submit()">To Do List</h3>
          </form>
            </div>
            <div class="scard two">
                <i class="fa-solid fa-stopwatch"></i>
              <h3>Stopwatch</h3>
            </div>
            <div class="scard three">
            <i class="fa-solid fa-money-bill-trend-up"></i>
            <!-- </h3>Expense Tracker</h3>
            <form action="/expenses" method="GET">
                <button type="submit" class="btn btn-todo">Go to Expenses</button>
            </form> -->
            <form id="todoExpense" action="/expenses" method="GET">
              <h3 onclick="document.getElementById('todoExpense').submit()">Expense Tracker</h3>
            </form>
            </div>
            <div class="scard four">
                <i class="fa-solid fa-face-smile"></i>
              <h3>Mood Tracker</h3>
            </div>
            <div class="scard five">
                <i class="fa-solid fa-stopwatch-20"></i>
              <h3>Pomodoro</h3>
            </div>
            <div class="scard six">
                <i class="fa-solid fa-hourglass-end"></i>
              <h3>Timer</h3>
            </div>
          </div>

        </div>
      </div>
      <div class="right">
       
      
        <div class="countdown-container">
        
          <div id="date-section">
              <input type="date" id="custom-date" placeholder="Select your target date">
              <button onclick="setCustomDate()">Set Target Date</button>
          </div>
  
          <!-- Reset Button Section -->
          <!-- <div id="reset-section" style="display: none;"> -->
            <div id="reset-section" style="display: none;">
              <button onclick="resetCountdown()">Reset</button>
          </div>

          <!-- Countdown Section -->
          <div id="countdown">
              <div id="a">
                  <h2 id="days">00</h2>
                  <p>Days</p>
              </div>
          </div>
      </div>
  
        
        <div class="motivation">
          <h2>Quote of the day</h2>
          <blockquote id="quote">Loading...</blockquote>
          <span id="author">Loading...</span>
        </div>

        <div class="music">
          <div class="playerbox">
            <h2 id="music-title">Lofi</h2>
            <div class="player-progress" id="player-progress">
              <div class="progress" id="progress"></div>
              <div class="music-duration">
                <span id="current-time">0:00</span>
                <span id="duration">0:00</span>
              </div>
            </div>
            <div class="player-controls">
              <i
                class="fa-solid fa-backward"
                title="Previous"
                id="prev"
                aria-label="Previous"
              ></i>
              <i
                class="fa-solid fa-play play-button"
                title="Play"
                id="play"
                aria-label="Play"
              ></i>
              <i
                class="fa-solid fa-forward"
                title="Next"
                id="next"
                aria-label="Next"
              ></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- main js  -->
    <script src="/js/dash.js"></script>
    <script src="/js/quotes.js"></script>
    <script src="/js/music.js"></script>
  </body>
</html>