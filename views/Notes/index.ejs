<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <link rel="stylesheet" href="/styles/Style.css">
</head>
<body>
    <div class="container">
        <h1 class="noteImg"><img src="/images/6558595.png">Notes</h1>

        <!-- Button to create a new note -->
        <form action="/notes" method="POST">
            <textarea name="content" class="editable-note"></textarea>
            <button type="submit" class="btn"><img src="/images/images (2).png">Create Notes</button>
        </form>

        <!-- Display notes -->
        <div class="notes-container">
            <% notes.forEach(note => { %>
                <div class="note" id="note-<%= note._id %>">
                    <div class="note-content">
                        <form action="/notes/<%= note._id %>?_method=PUT" method="POST">
                        <textarea name="editedContent" data-id="<%= note._id %>" class="editable-note"><%= note.content %></textarea>
                        
                            <button type="submit" class="edit-btn">Edit</button>
                        </form>
                    </div>
                    <form action="/notes/delete/<%= note._id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit" class="delete-btn">
                            <img src="/images/images (1).png" alt="delete">
                        </button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>

    <script> 
        document.querySelectorAll('.editable-note').forEach(textarea => {
        textarea.addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = this.scrollHeight + 'px';
        });
    
        // Initialize height for pre-filled textareas
        textarea.style.height = 'auto';
        textarea.style.height = textarea.scrollHeight + 'px';
    });
    </script>
</body>
</html>
